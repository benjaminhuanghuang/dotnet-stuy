@using WebApp.Models;

@model Category

@section title {
    @if (Model != null)
    {
        <h1>
            Categorie: @Model.CategoryId
        </h1>
    }
}
<form method="post" asp-controller="categories" asp-action="edit">

    <div class="row mb-3">
        <div class="co1-2">
            <label asp-for="Name" class="col-form-label">
            </label>
        </div>
        <div class="co1-6">
            <input type="text" asp-for="Name" class="form-control" />
        </div>
    </div>

    <div class="row mb-3">
        <div class="co1-2">
            <label asp-for="Description" class="col-form-label">
            </label>
        </div>
        <div class="co1-6">
            <input type="text" asp-for="Description" class="form-control" />
        </div>
    </div>

    <div class="row mb-3">
        <div class="co1-2">
           <input type="submit" class="btn btn-primary" value="Save"/>
        </div>
        <div class="co1-6">
           
        </div>
    </div>
</form>