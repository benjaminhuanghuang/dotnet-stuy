@using WebApp.Models;

@model Category

@section title {
    @if (Model != null)
    {
        <h1>
            Add Category
        </h1>
    }
}
<form method="post" asp-controller="categories" asp-action="edit">
    <input type="hidden" asp-for="CategoryId" />
    <div class="text-danger" asp-validation-summaryss="All"></div>
    <div class="row mb-3">
        <div class="co1-2">
            <label asp-for="Name" class="col-form-label">
            </label>
        </div>
        <div class="co1-6">
            <input type="text" asp-for="Name" class="form-control" />
        </div>
        <div class="col">
            <span class="text-danger" asp-validation-for="Name"></span>
        </div>
    </div>

    <div class="row mb-3">
        <div class="co1-2">
            <label asp-for="Description" class="col-form-label">
            </label>
        </div>
        <div class="co1-6">
            <input type="text" asp-for="Description" class="form-control" />
        </div>
    </div>

    <div class="row mb-3">
        <div class="co1-2">
            <input type="submit" class="btn btn-primary" value="Save" />
        </div>
        <div class="co1-6">
        </div>
    </div>
</form>